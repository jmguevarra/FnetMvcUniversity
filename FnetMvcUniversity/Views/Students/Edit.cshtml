
@{ 
    ViewBag.Title = "Edit";
}
@model FnetMvcUniversity.Models.Student

<form method="post">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">
                <i class="fa-solid fa-pen"></i> Edit Student
            </h2>
        </div>
        @Html.AntiForgeryToken()
        <div class="form_fields">
            <div class="row form-group fgr-field">
                <div class="col-4">
                    @Html.LabelFor(Model => Model.StudLRN)
                </div>
                <div class="col-8">
                    @Html.EditorFor(Model => Model.StudLRN, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>
            <div class="row form-group fgr-field">
                <div class="col-4">
                    @Html.LabelFor(Model => Model.FullName)
                </div>
                <div class="col-8">
                    @Html.EditorFor(Model => Model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(Model => Model.FullName)
                </div>
            </div>
            <div class="row form-group fgr-field">
                <div class="col-4">
                    @Html.LabelFor(Model => Model.StudCourse)
                </div>
                <div class="col-8">
                    @Html.EditorFor(Model => Model.StudCourse, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(Model => Model.StudCourse)
                </div>
            </div>
           
            <div class="row form-group fgr-field">
                <div class="col-4">
                    @Html.LabelFor(Model => Model.StudYear)
                </div>
                <div class="col-8">
                    @{
                        var schoolYearOpts = new SelectList(
                            new List<SelectListItem> {
                                new SelectListItem {Text = "1st Year", Value = "1"},
                                new SelectListItem {Text = "2nd Year", Value = "2"},
                                new SelectListItem {Text = "3rd Year", Value = "3"},
                                new SelectListItem {Text = "4th Year", Value = "4"},
                            }, "Value", "Text");
                    }

                    @Html.DropDownListFor(Model => Model.StudYear, schoolYearOpts, "--Select--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.StudYear)
                </div>
            </div>
            <div class="row form-group fgr-field">
                <div class="col-4">
                    @Html.LabelFor(Model => Model.StudSection)
                </div>
                <div class="col-8">
                    @Html.EditorFor(Model => Model.StudSection, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(Model => Model.StudSection)
                </div>
            </div>
            @Html.HiddenFor(Model => Model.id)
        </div>
        <div class="form-footer">
            <div class="form-group row">
                <div class="col-8 offset-4 row mt-2">
                    <div class="col ps-0">
                        <input type="submit" name="update-student" class="btn btn-info w-100" value="Update Student" />
                    </div>
                    <div class="col">
                        @Html.ActionLink("Back", "Index", null, new { @class="btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


